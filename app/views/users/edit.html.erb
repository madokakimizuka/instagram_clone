<h1>プロフィール編集</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :self_portrait %>
  <%= self_portrait_tag(@user.self_portrait.url) if @user.self_portrait && @user.self_portrait.url %>
  <%= f.file_field :self_portrait, id: :user_self_portrait %>
  <%= f.hidden_field :self_portrait_cache %>


  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Edit my profile" %>
<% end %>


<%= link_to 'Back', @user %>
