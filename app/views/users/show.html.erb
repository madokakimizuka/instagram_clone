<h1><%= @user.name %>のページ</h1>

<% if @user.self_portrait.present? %>
  <%= self_portrait_tag @user.self_portrait.url %>
<% end %>
<p>メールアドレス: <%= @user.email %></p>

<p><%= link_to "プロフィールを編集する", edit_user_path(@user.id) %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.pictures.each do |picture| %>
      <tr>
        <td><%= picture.title %></td>
        <td><%= image_tag picture.image.url %></td>
        <td><%= picture.content %></td>
        <td><%= link_to 'Show', picture %></td>
        <% if current_user.id == picture.user.id %>
          <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
          <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "投稿する", new_picture_path %>
<%= link_to "投稿一覧", pictures_path %>
<%= link_to "お気に入り一覧", favorites_path %>
